@model Biograf.Models.Forestallning

@{
    ViewData["Title"] = "Välj plats";
    var stolar = ViewBag.Stolar as List<dynamic>;
}

<h1>Välj plats</h1>

@if (Model.Film != null && Model.Salong != null)
{
    <div class="card mb-4">
        <div class="card-body">
            <h5 class="card-title">@Model.Film.Titel</h5>
            <p class="card-text">
                <strong>Datum och tid:</strong> @Model.DatumTid.ToString("yyyy-MM-dd HH:mm")<br />
                <strong>Salong:</strong> @Model.Salong.Salongsnummer<br />
                <strong>Pris:</strong> @Model.Film.Pris kr
            </p>
        </div>
    </div>

    <h4>Välj en ledig plats</h4>
    <p class="text-muted">Klicka på en grön stol för att boka den platsen.</p>

    <div class="row">
        <div class="col-md-12">
            <div class="mb-3 p-3 bg-light text-center">
                <h5>DUK</h5>
            </div>
            <div class="stolar-container">
                @if (stolar != null)
                {
                    int stolPerRad = 10;
                    for (int i = 0; i < stolar.Count; i++)
                    {
                        if (i % stolPerRad == 0 && i != 0)
                        {
                            <div class="clearfix"></div>
                            <div class="mb-2"></div>
                        }

                        var stol = stolar[i];
                        if (stol.Bokad)
                        {
                            <span class="stol stol-bokad" title="Stol @stol.Nummer - Upptagen">@stol.Nummer</span>
                        }
                        else
                        {
                            <a asp-action="BokaPlatsen" asp-route-forestallningId="@Model.Id" asp-route-stolnummer="@stol.Nummer" 
                               class="stol stol-ledig" title="Stol @stol.Nummer - Klicka för att boka">@stol.Nummer</a>
                        }
                    }
                }
            </div>
        </div>
    </div>

    <div class="mt-4">
        <span class="stol stol-ledig me-2"></span> Ledig plats
        <span class="stol stol-bokad ms-4 me-2"></span> Upptagen plats
    </div>
}

<div class="mt-3">
    <a asp-controller="Forestallningar" asp-action="Index" class="btn btn-secondary">Tillbaka till föreställningar</a>
</div>

@section Scripts {
    <style>
        .stolar-container {
            text-align: center;
            max-width: 800px;
            margin: 0 auto;
        }
        .stol {
            display: inline-block;
            width: 50px;
            height: 50px;
            line-height: 50px;
            margin: 5px;
            text-align: center;
            border-radius: 5px;
            text-decoration: none;
            color: white;
            font-weight: bold;
        }
        .stol-ledig {
            background-color: #28a745;
            cursor: pointer;
        }
        .stol-ledig:hover {
            background-color: #218838;
            color: white;
            transform: scale(1.1);
            transition: all 0.2s;
        }
        .stol-bokad {
            background-color: #dc3545;
            cursor: not-allowed;
        }
    </style>
}
