@{
    ViewData["Title"] = "Sök bokning";
}

<h1>Sök bokning</h1>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Ange ditt bokningsnummer</h5>
                <form asp-action="SokBokning" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    
                    <div class="form-group mb-3">
                        <label for="bokningsnummer" class="control-label">Bokningsnummer</label>
                        <input type="text" id="bokningsnummer" name="bokningsnummer" class="form-control" required 
                               placeholder="Ex: BK123456789" />
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Sök" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

        <div class="alert alert-info mt-4">
            <strong>Tips:</strong> Du hittar ditt bokningsnummer i bekräftelsen som du fick när du gjorde din bokning.
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
