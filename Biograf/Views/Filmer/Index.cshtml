@model IEnumerable<Biograf.Models.Film>

@{
    ViewData["Title"] = "Alla filmer";
}

<div class="text-center mb-4">
    <h1 class="display-4">Alla filmer</h1>
    <p class="lead text-muted">Upptäck vårt filmutbud</p>
</div>

<div class="row">
    @foreach (var film in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card h-100 film-card">
                @if (!string.IsNullOrEmpty(film.BildUrl))
                {
                    <img src="@film.BildUrl" class="card-img-top" alt="@film.Titel" style="height: 450px; object-fit: cover;">
                }
                <div class="card-body">
                    <h5 class="card-title">@film.Titel</h5>
                    <span class="badge bg-info mb-2">@film.Genre</span>
                    <p class="card-text">
                        @if (film.Beskrivning.Length > 100)
                        {
                            @film.Beskrivning.Substring(0, 100)
                            <text>...</text>
                        }
                        else
                        {
                            @film.Beskrivning
                        }
                    </p>
                    <hr />
                    <div class="d-flex justify-content-between align-items-center">
                        <small class="text-muted">@film.Langd min</small>
                        <strong class="text-primary">@film.Pris kr</strong>
                    </div>
                </div>
                <div class="card-footer bg-transparent border-0 pb-3">
                    <a asp-action="Detaljer" asp-route-id="@film.Id" class="btn btn-primary w-100">Visa detaljer</a>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .film-card {
        border: none;
        transition: all 0.3s ease;
        overflow: hidden;
    }
    
    .film-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 15px 35px rgba(0,0,0,0.2) !important;
    }
    
    .film-card img {
        transition: transform 0.3s ease;
    }
    
    .film-card:hover img {
        transform: scale(1.05);
    }
    
    .badge {
        font-size: 0.9rem;
        padding: 5px 12px;
    }
</style>
